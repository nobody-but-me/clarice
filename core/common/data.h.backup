
#ifndef DATA_H
#define DATA_H

#include <cglm/cglm.h>

enum  object_type
{
	quad_object
};

typedef struct
{
	unsigned int m_indices;
	mat4 m_transform;
	int m_initialized;
	
	texture *m_texture;
	enum object_type m_type;
	
	int z_index;
	vec2 position;
	vec3 rotation;
	vec3 color;
	vec2 scale;
	
	const char *name;
	
	void (*set_initialized)(int initialized_);
	void (*set_transform)(mat4 transform)
		
} object;

enum window_mode
{
	fullscreen_mode,
	windowed_mode
};

#endif//DATA_H
